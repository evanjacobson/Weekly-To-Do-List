<Window x:Class="Weekly_ToDo_List.Calendar_Popup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weekly_ToDo_List"
        mc:Ignorable="d"
        Title="Select a Date" Height="350" Width="350" WindowStartupLocation="CenterOwner" >
    <Viewbox>
        <Calendar Name="Calendar_Item" SelectionMode="SingleDate" SelectedDatesChanged="Calendar_Item_SelectedDatesChanged" Height="166" VerticalAlignment="Top"/>
    </Viewbox>
</Window>
